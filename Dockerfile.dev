# 开发环境Dockerfile

# 后端开发环境
FROM golang:1.20-alpine AS backend-dev
WORKDIR /app

# 安装开发工具
RUN apk add --no-cache git curl

# 安装热重载工具
RUN go install github.com/cosmtrek/air@latest

# 设置工作目录
WORKDIR /app/backend

# 启动命令
CMD ["air", "-c", ".air.toml"]

# 前端开发环境
FROM node:16-alpine AS frontend-dev
WORKDIR /app/frontend

# 安装开发工具
RUN apk add --no-cache git

# 启动命令
CMD ["npm", "start"] 